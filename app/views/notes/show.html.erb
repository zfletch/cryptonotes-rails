<% if @note %>

  <div class="text-center">
    <h1><%= t(".title") %></h1>

    <p class="lead">
      <%= t(".line1") %><br>
      <%= t(".line2") %><br>
    </p>

    <%= form_for @note, url: { action: :update, method: :patch } do |f| %>
      <%= f.hidden_field :id, value: @note.uuid %>
      <%= f.submit t(".submit"), class: "btn btn-primary btn-lg" %>
    <% end %>
    <br />

    <div class="container">
      <strong><%= t(".show_link") %> </strong>
      <%= link_to note_url(@note.uuid), note_path(@note.uuid), class: "note-link" %><br>
      <strong><%= t(".show_key") %> </strong>
      <span id="note-uuid">
        <%= @note.uuid %>
      </span>

      <% if @note.view_count && @note.view_count == 1 %>
        <h4><%= t(".delete") %></h4>
      <% end %>
    </div>
  </div>

<% else %>

  <div class="text-center">
    <h1><%= t(".no_note1") %></h1>
    <p class="lead">
    <%= t(".no_note2") %> <strong><%= params[:id] %></strong>.
    </p>
  </div>

<% end %>
